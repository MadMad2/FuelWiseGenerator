/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model. All application
 * data, including generator units, fuel storage, and their associated records, is
 * segregated into a user-specific data tree. Access is granted exclusively to the
 * authenticated user who owns that specific data tree.
 *
 * Data Structure: All data is nested under the `/users/{userId}` path. This hierarchical
 * organization ensures that a user's data is logically grouped and can be secured with
 * a single, efficient path-based rule. For example, a user's generator units are at
 * `/users/{userId}/generatorUnits/{generatorUnitId}`.
 *
 * Key Security Decisions:
 * - Default Deny: All access is denied by default. Rules explicitly grant permissions.
 * - User-Owned Data: All read and write operations are restricted to the owner of the
 *   data, determined by matching the `userId` in the path with the authenticated
 *   user's UID.
 * - No Public Access: There are no publicly readable collections. All data is private.
 * - No User Listing: It is not possible to list documents in the top-level `/users`
 *   collection, protecting user privacy.
 *
 * Denormalization for Authorization: The entire security model is built on the principle
 * of path-based authorization. The user's UID is part of the document path, which acts
 * as denormalized authorization data. This avoids the need for slow, costly `get()`
 * calls to other documents to verify ownership, resulting in faster and more scalable rules.
 *
 * Structural Segregation: Data is structurally segregated by user ID at the root of the
 * database. This is a highly secure and performant pattern, as queries for a user's data
 * (e.g., `db.collection('users/some-user-id/generatorUnits').get()`) are inherently
 * scoped to only that user's documents, and the security rules can enforce this scope
 * efficiently at the `list` operation level.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    // --------------------------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the currently authenticated user's UID matches the given userId.
     * This is the foundation of the user-ownership model.
     * @param userId The user ID from the document path.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    /**
     * Verifies ownership for an existing document. Used for update and delete
     * operations to prevent acting on non-existent data.
     * @param userId The user ID from the document path.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * Validates relational integrity when creating a UsageRecord.
     * Ensures the record is being created for the correct parent generator.
     */
    function isCreatingValidUsageRecord(generatorUnitId) {
      return request.resource.data.generatorUnitId == generatorUnitId;
    }

    /**
     * Enforces immutability of the parent link on UsageRecord updates.
     */
    function isUpdatingUsageRecord() {
      return request.resource.data.generatorUnitId == resource.data.generatorUnitId;
    }

    /**
     * Validates relational integrity when creating an Expense.
     * Ensures the expense is being created for the correct parent generator.
     */
    function isCreatingValidExpense(generatorUnitId) {
      return request.resource.data.generatorUnitId == generatorUnitId;
    }

    /**
     * Enforces immutability of the parent link on Expense updates.
     */
    function isUpdatingExpense() {
      return request.resource.data.generatorUnitId == resource.data.generatorUnitId;
    }

    // User Data Root
    // --------------------------------
    
    /**
     * @description Secures the user's data root. Disallows direct manipulation of the
     *              user document itself, treating it as a container for subcollections.
     * @path        /users/{userId}
     * @allow       (list) A user listing their own subcollections (like 'generatorUnits').
     * @deny        (get, create, update, delete) Any user trying to read or write the /users/{userId} document directly.
     * @principle   Restricts access to a user's own data tree and prevents modification of the root path document.
     */
    match /users/{userId} {
      allow get: if false;
      allow list: if isOwner(userId);
      allow create: if false;
      allow update: if false;
      allow delete: if false;

      /**
       * @description Secures a user's collection of settings documents.
       * @path        /users/{userId}/settings/{settingId}
       * @allow       (create, get, list, update, delete) A user managing their own settings.
       * @principle   Enforces strict document ownership for user-specific settings.
       */
      match /settings/{settingId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Secures a user's collection of generator units.
       * @path        /users/{userId}/generatorUnits/{generatorUnitId}
       * @allow       (create, get, list, update, delete) A user managing their own generator unit.
       * @deny        (create, get, list, update, delete) Another user trying to access or modify a generator unit they do not own.
       * @principle   Enforces strict document ownership based on the user's ID in the path.
       */
      match /generatorUnits/{generatorUnitId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);

        /**
         * @description Secures usage records for a specific generator unit.
         * @path        /users/{userId}/generatorUnits/{generatorUnitId}/usageRecords/{usageRecordId}
         * @allow       (create) A user creating a usage record for their own generator.
         * @deny        (update) A user trying to re-assign a usage record to a different generator unit.
         * @principle   Enforces ownership via path and validates relational integrity on writes.
         */
        match /usageRecords/{usageRecordId} {
          allow get: if isOwner(userId);
          allow list: if isOwner(userId);
          allow create: if isOwner(userId) && isCreatingValidUsageRecord(generatorUnitId);
          allow update: if isExistingOwner(userId) && isUpdatingUsageRecord();
          allow delete: if isExistingOwner(userId);
        }
        
        /**
         * @description Secures expenses for a specific generator unit.
         * @path        /users/{userId}/generatorUnits/{generatorUnitId}/expenses/{expenseId}
         * @allow       (create) A user creating an expense for their own generator.
         * @deny        (update) A user trying to re-assign an expense to a different generator unit.
         * @principle   Enforces ownership via path and validates relational integrity on writes.
         */
        match /expenses/{expenseId} {
          allow get: if isOwner(userId);
          allow list: if isOwner(userId);
          allow create: if isOwner(userId) && isCreatingValidExpense(generatorUnitId);
          allow update: if isExistingOwner(userId) && isUpdatingExpense();
          allow delete: if isExistingOwner(userId);
        }
      }

      /**
       * @description Secures a user's collection of fuel storage units.
       * @path        /users/{userId}/fuelStorages/{fuelStorageId}
       * @allow       (create, get, list, update, delete) A user managing their own fuel storage.
       * @deny        (create, get, list, update, delete) Another user trying to access a fuel storage they do not own.
       * @principle   Enforces strict document ownership based on the user's ID in the path.
       */
      match /fuelStorages/{fuelStorageId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }
    }
  }
}
